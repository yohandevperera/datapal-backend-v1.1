<br><br><br>
<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
    <div class="card">
        <h5 class="card-header">Edit Record</h5>

        <div class="card-body">
            <form class="needs-validation" action="/admin/records/edit" method="POST">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                        <label for="customerid">Customer ID</label>
                        <input type="text" class="form-control" name="customerid" id="customerid"
                            value={{data.CustomerName}}>
                        <br>
                    </div>

                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                        <label for="customer-name">Customer name</label>
                        <input type="text" class="form-control" name="customername" id="customername"
                            placeholder="Last name" required>
                        <br>
                    </div>

                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                        <label for="customer-tel">Telephone</label>
                        <input type="number" class="form-control" name="customertel" id="customertel"
                            placeholder="Telephone" required>
                        <br>
                    </div>

                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                        <label for="customer-address">Address</label>
                        <input type="text" class="form-control" name="customeraddress" id="customeraddress"
                            placeholder="Address" required>
                        <br>

                    </div>
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                        <label for="customer-address">Email</label>
                        <input type="email" class="form-control" name="customeremail" id="customeremail"
                            placeholder="Email" required>
                        <br>
                    </div>

                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                        <button class="btn btn-primary" type="submit">Edit Customer</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

